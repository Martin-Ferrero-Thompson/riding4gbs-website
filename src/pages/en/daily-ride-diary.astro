---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const allPosts = await getCollection('posts', ({ id }) => id.startsWith('en/'));
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const postsByDay = sortedPosts.reduce((acc, post) => {
  const postDate = new Date(post.data.pubDate).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
  if (!acc[postDate]) {
    acc[postDate] = [];
  }
  acc[postDate].push(post);
  return acc;
}, {});
---
<MainLayout title="Daily Ride Diary | Riding4GBS">
  <div 
    transition:name="diary-card"
    class="m-4 md:m-8 lg:m-12 p-6 md:p-8 lg:p-10 bg-white rounded-xl max-w-4xl w-full mx-auto text-gray-800 font-sans"
  >
    
    <div class="text-center">
      <h1 class="font-display font-extrabold text-4xl md:text-5xl lg:text-6xl text-gray-900">
        Daily Ride Journal
      </h1>
      <p class="mt-4 max-w-3xl mx-auto text-center text-lg text-gray-500">
        Follow the daily progress from the road, with updates, photos, and stories from the journey.
      </p>
    </div>

    <div class="mt-12 space-y-12">
      {Object.entries(postsByDay).map(([date, posts]) => (
        <section>
          <h2 class="font-display font-bold text-3xl md:text-4xl border-b border-gray-200 pb-2 mb-6">{date}</h2>
          <div class="space-y-8">
            {posts.map(post => (
              <a href={`/en/posts/${post.slug}/`} class="flex flex-col md:flex-row items-center gap-6 p-4 rounded-lg hover:bg-gray-100 transition-colors group">
                
                <div class="w-full md:w-1/3 flex-shrink-0">
                  {post.data.image ? (
                    <Image 
                      src={post.data.image.src}
                      alt={post.data.image.alt}
                      class="w-full h-48 object-cover rounded-md"
                      widths={[200, 400]}
                      sizes="(max-width: 768px) 100vw, 200px"
                    />
                  ) : (
                    <div class="w-full h-48 bg-gray-200 rounded-md flex items-center justify-center">
                      <p class="text-gray-500">No Image</p>
                    </div>
                  )}
                </div>
                
                <div class="flex flex-col">
                  <p class="text-sm font-semibold text-gray-500">
                    {new Date(post.data.pubDate).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: true })}
                  </p>
                  <h3 class="font-display font-bold text-2xl md:text-3xl text-brand-blue mt-1 group-hover:underline">
                    {post.data.title}
                  </h3>
                  {post.data.tagline && <p class="text-lg text-gray-600 mt-2">{post.data.tagline}</p>}
                </div>

              </a>
            ))}
          </div>
        </section>
      ))}
    </div>
  </div>
</MainLayout>