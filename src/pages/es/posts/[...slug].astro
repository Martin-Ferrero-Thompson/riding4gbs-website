---
import MainLayout from "../../../layouts/MainLayout.astro";
import { type CollectionEntry, getCollection } from "astro:content";
import { Image } from "astro:assets";

export async function getStaticPaths() {
  const allPosts = await getCollection("posts", ({ id }) => id.startsWith("es/"));
  if (!allPosts || allPosts.length === 0) {
    return [];
  }
  return allPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props as Props;
const { Content } = await post.render();
---

<MainLayout title={post.data.title}>
  <a transition:name={post.slug}>
    <article class="m-4 md:m-8 lg:m-12 p-6 md:p-8 lg:p-10 bg-white rounded-xl max-w-6xl w-full mx-auto text-gray-800 font-sans">
      <div class="text-center">
        <p class="text-gray-500">
          {new Date(post.data.pubDate).toLocaleDateString("es-ES", {
            weekday: "long",
            year: "numeric",
            month: "long",
            day: "numeric",
          })}
        </p>
        <h1 class="font-display text-4xl md:text-5xl font-extrabold mt-2">{post.data.title}</h1>
        {post.data.tagline && (
          <p class="text-xl text-gray-500 mt-4">{post.data.tagline}</p>
        )}
      </div>

      {post.data.image && (
        <div class="mt-8">
          <Image
            src={post.data.image.src}
            alt={post.data.image.alt}
            class="w-full h-auto rounded-lg shadow-lg"
            widths={[400, 800, 1200]}
            sizes="(max-width: 800px) 100vw, 800px"
          />
        </div>
      )}

      <div class="prose prose-lg max-w-none mt-8">
        <Content />
      </div>

      <div class="mt-12 pt-8 border-t border-gray-200 text-center">
        <a href="/es/journal-hub/" class="inline-flex items-center gap-2 text-lg font-bold text-brand-blue hover:underline">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18"></path>
          </svg>
          Volver al Diario
        </a>
      </div>
    </article>
  </a>
</MainLayout>
