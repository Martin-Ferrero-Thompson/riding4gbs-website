---
import MainLayout from "../layouts/MainLayout.astro";
import type { ChallengeLocaleContent } from "../data/challenge.i18n";
import { marked } from "marked";

export interface Props {
  lang: "en" | "es" | "fr";
  t: ChallengeLocaleContent;
}

const { t } = Astro.props as Props;
---

<MainLayout title={t.metaTitle}>
  <div
    transition:name="challenge-card"
    class="page-card-dark max-w-6xl w-full mx-auto font-body"
  >
    <div class="text-center">
      <h1 class="hero-title text-white">
        {t.heroTitle}
      </h1>
      <div class="mt-4 max-w-2xl mx-auto font-body text-left text-base md:text-lg lg:text-xl text-gray-300" set:html={marked.parse(t.heroDescriptionMd)} />
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8 text-center my-10 md:my-12 border-y border-white/20 py-6">
      {t.stats.map((s) => (
        <div>
          <p class="font-headline font-semibold text-lg md:text-xl lg:text-2xl text-brand-blue">{s.value}</p>
          <p class="text-sm text-gray-300">{s.label}</p>
        </div>
      ))}
    </div>

    <div class="text-center max-w-3xl mx-auto">
      <h2 class="font-headline font-semibold text-lg md:text-xl lg:text-2xl text-white">
        {t.styleHeading}
      </h2>
      <div class="mt-4 font-body text-base md:text-lg lg:text-xl text-gray-300 text-left" set:html={marked.parse(t.styleBodyMd)} />
    </div>

    <div class="grid md:grid-cols-2 gap-8 mt-12">
      {t.legs.map((leg) => (
        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="font-headline font-semibold text-lg md:text-xl lg:text-2xl text-gray-900">
            {leg.title}
          </h3>
          <div class="mt-2 font-body text-base md:text-lg lg:text-xl text-gray-600" set:html={marked.parse(leg.bodyMd)} />
        </div>
      ))}
    </div>
  </div>
</MainLayout>
