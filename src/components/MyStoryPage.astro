---
import MainLayout from "../layouts/MainLayout.astro";
import { Carousel } from "./Carousel.jsx";
import i18n from "../data/sidebar.json";
import type { MyStoryLocaleContent } from "../data/myStory.i18n";
import { marked } from "marked";

export interface Props {
  lang: "en" | "es" | "fr";
  t: MyStoryLocaleContent;
}

const { lang, t } = Astro.props as Props;
const sidebar = i18n[lang];
const slides = t.slides.map((s) => ({ title: s.title, content: marked.parse(s.bodyMd) as string }));
---

<MainLayout title={t.metaTitle}>
  <div
    transition:name="my-story-card"
    class="page-card-dark max-w-6xl w-full mx-auto font-body"
  >
    <div class="text-center">
      <h1 class="hero-title text-white">
        {t.heroTitle}
      </h1>
      <p class="mt-4 max-w-3xl mx-auto text-center font-body text-base md:text-lg lg:text-xl text-gray-300">
        {t.heroSubtitle}
      </p>
    </div>
    <div class="relative w-full mt-12 px-0 md:px-10">
      <div class="w-full">
        <div class="overflow-hidden rounded-xl shadow-lg">
          <img
            class="my-story-images rounded-xl shadow-lg object-cover w-full h-96"
            src={t.image.src}
            alt={t.image.alt}
          />
        </div>
      </div>
    </div>

    <Carousel client:load slides={slides} i18n={sidebar} />
  </div>
</MainLayout>
