---
import type { HomeLocaleContent } from "../data/home.i18n";
import MainLayout from "../layouts/MainLayout.astro";
import { marked } from "marked";

export interface Props {
  lang: "en" | "es" | "fr";
  t: HomeLocaleContent;
}

const { lang, t } = Astro.props as Props;
---

<MainLayout title={t.metaTitle}>
  <div transition:name="hero-card" class="w-full flex justify-center">
    <div
      class="m-4 md:m-8 lg:m-12 p-6 md:p-8 lg:p-10 bg-gray-900 bg-opacity-80 rounded-xl backdrop-blur-sm text-center text-white max-w-6xl w-full"
    >
      <h1 class="font-display font-extrabold text-4xl md:text-5xl lg:text-6xl">
        {t.heroTitle}
      </h1>

      <p class="font-display text-2xl md:text-4xl font-bold text-brand-blue mt-4">
        #RIDING4GBS
      </p>

      <div class="font-sans text-lg max-w-4xl mx-auto space-y-6 mt-8 text-left">
        {t.introParagraphsMd.map((md) => (
          <div set:html={marked.parse(md)} />
        ))}

        <div class="bg-gray-50 py-16 sm:py-24 rounded-lg">
          <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
            <h2 class="text-2xl font-display font-semibold leading-7 text-blue-600">
              {t.hometownPartnerHeading}
            </h2>

            <div class="mt-8">
              <a
                href="https://cyclabikes.es/"
                target="_blank"
                rel="noopener noreferrer"
                title={t.partnerLinkTitle}
              >
                <img
                  src="/partners/logo-cycla-bikes.png"
                  alt={t.partnerLogoAlt}
                  class="h-16 sm:h-20 mx-auto object-contain transition-transform duration-300 hover:scale-110"
                />
              </a>
            </div>

            <div
              class="mt-6 text-lg leading-8 text-gray-600 max-w-2xl mx-auto"
              set:html={marked.parse(t.hometownPartnerDescriptionMd)}
            />
          </div>
        </div>

        <div class="mt-8 md:mt-12">
          <p class="font-sans font-bold text-center">{t.supportersHeading}</p>
          <div class="mt-4 flex flex-wrap justify-center items-center gap-6">
            {t.supporters.map((s) => (
              <a
                href={s.href}
                class="group relative flex flex-col items-center justify-between gap-4 p-6 bg-white rounded-lg h-40 w-64 transition-transform hover:scale-105"
                target="_blank"
                rel="noopener noreferrer"
              >
                <img src={s.imgSrc} alt={s.imgAlt} class="max-h-16 object-contain" />
                <div class="font-sans bg-gray-100 text-gray-800 px-6 py-2 rounded-md">
                  <span lang={s.ctaLang}>{s.ctaLabel}</span>
                </div>
                <div
                  class="absolute inset-0 bg-black/80 text-white flex items-center justify-center p-4 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                >
                  <p class="font-sans font-bold text-center">{s.overlayTitle}</p>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
