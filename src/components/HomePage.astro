---
import type { HomeLocaleContent } from "../data/home.i18n";
import MainLayout from "../layouts/MainLayout.astro";
import { marked } from "marked";
import LogoCircleUrl from "../assets/images/LogoGSBCirculo.svg?url";

export interface Props {
  lang: "en" | "es" | "fr";
  t: HomeLocaleContent;
}

const { lang, t } = Astro.props as Props;

const heroLogoAlt = {
  en: "Riding4GBS circular logo",
  es: "Logotipo circular Riding4GBS",
  fr: "Logo circulaire Riding4GBS",
}[lang];
---

<MainLayout title={t.metaTitle}>
  <div transition:name="hero-card" class="w-full flex justify-center">
    <div
      class="page-card-dark text-center max-w-6xl w-full relative"
    >

      <h1 class="hero-title">
        {t.heroTitle}
      </h1>
      <img
        src={LogoCircleUrl}
        alt={heroLogoAlt}
        class="w-16 sm:w-20 md:w-24"
        decoding="async"
      />
      <!-- <p class="font-headline font-semibold text-lg md:text-xl lg:text-3xl text-brand-blue mt-4">
        #RIDING4GBS
      </p> -->

  <div class="font-body text-base md:text-lg lg:text-xl max-w-4xl mx-auto space-y-6 mt-8 text-left">
        {t.introParagraphsMd.map((md) => (
          <div set:html={marked.parse(md)} />
        ))}
        {t.supportMessage ? (
          <div class="support-message bg-gray-50 py-12 sm:py-16 rounded-lg relative overflow-hidden">
            <!-- Watermark (on top): To Be Replaced By INUK -->
            <div class="absolute inset-0 flex items-center justify-center pointer-events-none z-30" aria-hidden="true">
              <span class="transform -rotate-45 text-gray-900 opacity-70 font-bold whitespace-nowrap text-3xl sm:text-4xl md:text-4xl lg:text-5xl">
                To Be Replaced By INUK
              </span>
            </div>

            <!-- Decorative opening quote (top-left) -->
            <svg class="hidden sm:block absolute left-4 top-4 w-20 h-20 text-brand-blue z-10" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <text x="0" y="18" fill="currentColor" style="font-size:20px; font-family: Georgia, 'Times New Roman', serif; font-weight:700;">{"\u275D"}</text>
            </svg>

            <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center relative z-20">
              <h2 class="font-display font-semibold text-brand-blue tracking-wide leading-tight text-2xl md:text-3xl lg:text-4xl">{t.supportMessage.heading}</h2>

              <blockquote class="mt-6 italic text-gray-700 text-lg md:text-xl leading-relaxed max-w-3xl mx-auto">{t.supportMessage.quote}</blockquote>

              <p class="mt-6 text-sm text-gray-500">{t.supportMessage.attribution}</p>

              <div class="mt-6">
                <a href={t.supportMessage.ctaHref || "#"} target="_blank" rel="noopener noreferrer" class="inline-block bg-brand-blue text-white px-5 py-2.5 rounded-md shadow hover:bg-brand-blue-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-blue-light" aria-label={t.supportMessage.ctaLabel}>
                  {t.supportMessage.ctaLabel}
                </a>
              </div>
            </div>

            <!-- Decorative closing quote (bottom-right) -->
            <svg class="hidden sm:block absolute right-4 bottom-4 w-20 h-20 text-brand-blue z-10" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <text x="0" y="18" fill="currentColor" style="font-size:20px; font-family: Georgia, 'Times New Roman', serif; font-weight:700;">{"\u275E"}</text>
            </svg>
          </div>
        ) : (
          <div class="support-message bg-gray-50 py-16 sm:py-24 rounded-lg">
            <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
              <h2 class="font-display font-semibold text-blue-600 uppercase tracking-wide leading-tight text-3xl md:text-4xl lg:text-5xl">
                {t.hometownPartnerHeading}
              </h2>

              <div class="mt-8">
                <a
                  href="https://cyclabikes.es/"
                  target="_blank"
                  rel="noopener noreferrer"
                  title={t.partnerLinkTitle}
                >
                  <img
                    src="/partners/logo-cycla-bikes.png"
                    alt={t.partnerLogoAlt}
                    class="h-16 sm:h-20 mx-auto object-contain transition-transform duration-300 hover:scale-110"
                  />
                </a>
              </div>

              <div
                class="mt-6 text-lg leading-8 text-gray-600 max-w-2xl mx-auto"
                set:html={marked.parse(t.hometownPartnerDescriptionMd)}
              />
            </div>
          </div>
        )}

        <div class="mt-8 md:mt-12">
          <p class="font-headline font-semibold text-lg md:text-xl lg:text-2xl text-center">{t.supportersHeading}</p>
          <div class="mt-4 flex flex-wrap justify-center items-center gap-6">
            {t.supporters.map((s) => (
              <a
                href={s.href}
                class="group relative flex flex-col items-center justify-between gap-3 p-5 md:p-6 bg-white rounded-lg h-48 w-64 transition-transform hover:scale-105"
                target="_blank"
                rel="noopener noreferrer"
              >
                <!-- Logo: allow slight shrink on small screens to create vertical space for multi-line CTA -->
                <img src={s.imgSrc} alt={s.imgAlt} class="max-h-14 md:max-h-16 object-contain" />
                <!-- CTA pill: full width so wrapping is predictable; font scales for accessibility; two-line wrap supported -->
                <div class="font-body bg-gray-100 text-gray-800 w-full px-4 py-2 rounded-md text-center">
                  <span lang={s.ctaLang} class="block text-sm md:text-base leading-snug">
                    {s.ctaLabel}
                  </span>
                </div>
                <div
                  class="absolute inset-0 bg-black/80 text-white flex items-center justify-center p-4 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                >
                  <p class="font-headline font-semibold text-center">{s.overlayTitle}</p>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
