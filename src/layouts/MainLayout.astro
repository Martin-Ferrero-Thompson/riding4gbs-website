---
import "@fontsource/lato/400.css";
import "@fontsource/lato/700.css";
import "@fontsource/montserrat/700.css";
import "@fontsource/montserrat/900.css";

import "../styles/global.css";
import Sidebar from "../components/Sidebar.astro";
import Hamburger from "../components/Hamburger.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
// Derive document language from the current route prefix for a11y/SEO
const path = Astro.url.pathname;
const lang = path.startsWith("/es")
  ? "es"
  : path.startsWith("/eu")
    ? "eu"
    : "en";
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="google" content="notranslate" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <style>
      ::view-transition-old(*) {
        animation: fade-out 0.5s ease-in-out forwards;
      }
      ::view-transition-new(*) {
        animation: slide-in-from-left 1s cubic-bezier(0.25, 1, 0.5, 1) forwards;
      }
    </style>
  </head>

  <body class="bg-gray-800 font-sans relative">
    <a href="#main" class="skip-link">Skip to main content</a>
    <Hamburger />

    <div class="flex flex-col md:flex-row min-h-screen">
      <Sidebar />

      <div class="w-full flex flex-col overflow-hidden">
        <main
          id="main"
          class="w-full flex-1 overflow-y-auto bg-cover bg-center md:bg-fixed flex items-start justify-center pt-[env(safe-area-inset-top)] pb-[env(safe-area-inset-bottom)] py-12 md:py-20 lg:py-24"
          style="background-image: url('/background.png');"
        >
          <slot />
        </main>
      </div>
    </div>

    <!-- Footer Badge -->
    <div class="fixed bottom-6 right-6 z-50 hidden lg:block">
      <a
        href="https://blog.riding4gbs.com"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-3 px-4 py-2 bg-white rounded-full shadow-[0_8px_30px_rgb(0,0,0,0.12)] border border-gray-100 hover:shadow-[0_8px_30px_rgb(0,0,0,0.2)] transition-all duration-300 group hover:-translate-y-1"
      >
        <div
          class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center text-lg"
        >
          üêå
        </div>
        <div class="flex flex-col">
          <span
            class="text-[10px] font-medium text-gray-500 uppercase tracking-wider leading-none mb-0.5"
            >Supporting</span
          >
          <span
            class="text-sm font-bold text-gray-900 group-hover:text-blue-600 transition-colors leading-none"
            >The Neural Cyclist</span
          >
        </div>
      </a>
    </div>

    <script>
      // Sync stored language preference with current URL route
      (function () {
        const LOCAL_STORAGE_KEY = "r4gbs:preferredLanguage";
        const COOKIE_NAME = "r4gbs_pref_lang";

        function writeCookie(value: string) {
          const expires = new Date();
          expires.setFullYear(expires.getFullYear() + 1);
          document.cookie = `${COOKIE_NAME}=${encodeURIComponent(value)}; path=/; expires=${expires.toUTCString()}; SameSite=Lax`;
        }

        function syncLanguageFromRoute() {
          const path = window.location.pathname;
          let lang = "en"; // default

          if (path.startsWith("/es")) {
            lang = "es";
          } else if (path.startsWith("/eu")) {
            lang = "eu";
          } else if (path.startsWith("/en")) {
            lang = "en";
          }

          // Update stored preference to match the current route
          try {
            if (typeof window !== "undefined") {
              window.localStorage.setItem(LOCAL_STORAGE_KEY, lang);
            }
            writeCookie(lang);
          } catch (error) {
            console.warn("[language] Unable to sync language", error);
          }
        }

        syncLanguageFromRoute();
        document.addEventListener("astro:page-load", syncLanguageFromRoute);
      })();
    </script>

    <script>
      function setupHamburger() {
        const hamburgerButton = document.getElementById("hamburger-button");
        const sidebar = document.getElementById("sidebar");

        if (hamburgerButton && sidebar) {
          const updateAria = () => {
            const isHidden = sidebar.classList.contains("hidden");
            hamburgerButton.setAttribute("aria-expanded", String(!isHidden));
          };
          // Initialize state on load
          updateAria();

          hamburgerButton.addEventListener("click", () => {
            sidebar.classList.toggle("hidden");
            updateAria();
          });
        }
      }

      document.addEventListener("DOMContentLoaded", setupHamburger);
      document.addEventListener("astro:page-load", setupHamburger);
    </script>
  </body>
</html>
